    <script type="text/babel">
        // Composant principal de l'application
        function PayrollAuditApp() {
            const [activeTab, setActiveTab] = React.useState('dashboard');
            const [anomalies, setAnomalies] = React.useState([]);
            const [employees, setEmployees] = React.useState([]);
            const [loading, setLoading] = React.useState(true);
            
            // Données simulées pour la démonstration
            React.useEffect(() => {
                // Simuler un chargement de données
                setTimeout(() => {
                    setAnomalies([
                        { id: 1, employee: 'Jean Dupont', type: 'Heures supplémentaires non payées', severity: 'critical', date: '2023-05-15', status: 'non résolu' },
                        { id: 2, employee: 'Marie Martin', type: 'Congés mal calculés', severity: 'warning', date: '2023-05-10', status: 'en cours' },
                        { id: 3, employee: 'Pierre Lambert', type: 'Salaire inférieur au minimum', severity: 'critical', date: '2023-05-08', status: 'non résolu' },
                        { id: 4, employee: 'Sophie Bernard', type: 'Prime non versée', severity: 'warning', date: '2023-05-05', status: 'résolu' },
                        { id: 5, employee: 'Luc Petit', type: 'Erreur de taux horaire', severity: 'critical', date: '2023-05-03', status: 'en cours' }
                    ]);
                    
                    setEmployees([
                        { id: 1, name: 'Jean Dupont', department: 'Ventes', salary: 3200, lastPaid: '2023-05-01', status: 'Actif' },
                        { id: 2, name: 'Marie Martin', department: 'Marketing', salary: 2800, lastPaid: '2023-05-01', status: 'Actif' },
                        { id: 3, name: 'Pierre Lambert', department: 'IT', salary: 4500, lastPaid: '2023-05-01', status: 'Actif' },
                        { id: 4, name: 'Sophie Bernard', department: 'RH', salary: 3500, lastPaid: '2023-05-01', status: 'Actif' },
                        { id: 5, name: 'Luc Petit', department: 'Finance', salary: 3800, lastPaid: '2023-05-01', status: 'Actif' }
                    ]);
                    
                    setLoading(false);
                }, 1000);
            }, []);
            
            // Statistiques calculées
            const criticalAnomalies = anomalies.filter(a => a.severity === 'critical').length;
            const warningAnomalies = anomalies.filter(a => a.severity === 'warning').length;
            const resolvedAnomalies = anomalies.filter(a => a.status === 'résolu').length;
            
            // Fonction pour changer le statut d'une anomalie
            const updateAnomalyStatus = (id, newStatus) => {
                setAnomalies(anomalies.map(anomaly => 
                    anomaly.id === id ? {...anomaly, status: newStatus} : anomaly
                ));
            };
            
            return (
                <div>
                    {/* Barre de navigation */}
                    <nav className="navbar navbar-expand-lg navbar-dark">
                        <div className="container-fluid">
                            <span className="navbar-brand">
                                <i className="fas fa-chart-line me-2"></i>
                                Audit de Paie
                            </span>
                            <div className="d-flex">
                                <span className="navbar-text text-white me-3">
                                    <i className="fas fa-user me-1"></i> Stagiaire
                                </span>
                                <button className="btn btn-outline-light btn-sm">
                                    <i className="fas fa-sign-out-alt"></i> Déconnexion
                                </button>
                            </div>
                        </div>
                    </nav>
                    
                    <div className="container-fluid">
                        <div className="row">
                            {/* Sidebar */}
                            <div className="col-md-3 col-lg-2 d-md-block sidebar collapse">
                                <div className="position-sticky pt-3">
                                    <ul className="nav flex-column">
                                        <li className="nav-item">
                                            <a 
                                                className={`nav-link ${activeTab === 'dashboard' ? 'active' : ''}`}
                                                href="#"
                                                onClick={() => setActiveTab('dashboard')}
                                            >
                                                <i className="fas fa-tachometer-alt"></i>
                                                Tableau de bord
                                            </a>
                                        </li>
                                        <li className="nav-item">
                                            <a 
                                                className={`nav-link ${activeTab === 'anomalies' ? 'active' : ''}`}
                                                href="#"
                                                onClick={() => setActiveTab('anomalies')}
                                            >
                                                <i className="fas fa-exclamation-triangle"></i>
                                                Anomalies
                                            </a>
                                        </li>
                                        <li className="nav-item">
                                            <a 
                                                className={`nav-link ${activeTab === 'employees' ? 'active' : ''}`}
                                                href="#"
                                                onClick={() => setActiveTab('employees')}
                                            >
                                                <i className="fas fa-users"></i>
                                                Employés
                                            </a>
                                        </li>
                                        <li className="nav-item">
                                            <a 
                                                className={`nav-link ${activeTab === 'reports' ? 'active' : ''}`}
                                                href="#"
                                                onClick={() => setActiveTab('reports')}
                                            >
                                                <i className="fas fa-chart-bar"></i>
                                                Rapports
                                            </a>
                                        </li>
                                        <li className="nav-item">
                                            <a 
                                                className={`nav-link ${activeTab === 'settings' ? 'active' : ''}`}
                                                href="#"
                                                onClick={() => setActiveTab('settings')}
                                            >
                                                <i className="fas fa-cog"></i>
                                                Paramètres
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            
                            {/* Contenu principal */}
                            <main className="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                                {loading ? (
                                    <div className="d-flex justify-content-center align-items-center" style={{height: '50vh'}}>
                                        <div className="text-center">
                                            <div className="spinner-border text-primary" role="status">
                                                <span className="visually-hidden">Chargement...</span>
                                            </div>
                                            <p className="mt-2">Chargement des données...</p>
                                        </div>
                                    </div>
                                ) : (
                                    <>
                                        {activeTab === 'dashboard' && <DashboardTab anomalies={anomalies} criticalAnomalies={criticalAnomalies} warningAnomalies={warningAnomalies} resolvedAnomalies={resolvedAnomalies} />}
                                        {activeTab === 'anomalies' && <AnomaliesTab anomalies={anomalies} updateAnomalyStatus={updateAnomalyStatus} />}
                                        {activeTab === 'employees' && <EmployeesTab employees={employees} />}
                                        {activeTab === 'reports' && <ReportsTab anomalies={anomalies} employees={employees} />}
                                        {activeTab === 'settings' && <SettingsTab />}
                                    </>
                                )}
                            </main>
                        </div>
                    </div>
                </div>
            );
        }
        
        // Composant pour l'onglet Tableau de bord
        function DashboardTab({ anomalies, criticalAnomalies, warningAnomalies, resolvedAnomalies }) {
            return (
                <div>
                    <h2 className="h4 mb-4">Tableau de bord</h2>
                    
                    {/* Cartes de statistiques */}
                    <div className="row">
                        <div className="col-md-3">
                            <div className="card stat-card">
                                <div className="card-body">
                                    <i className="fas fa-exclamation-circle fa-2x critical"></i>
                                    <div className="number critical">{criticalAnomalies}</div>
                                    <div>Anomalies critiques</div>
                                </div>
                            </div>
                        </div>
                        <div className="col-md-3">
                            <div className="card stat-card">
                                <div className="card-body">
                                    <i className="fas fa-exclamation-triangle fa-2x warning"></i>
                                    <div className="number warning">{warningAnomalies}</div>
                                    <div>Anomalies modérées</div>
                                </div>
                            </div>
                        </div>
                        <div className="col-md-3">
                            <div className="card stat-card">
                                <div className="card-body">
                                    <i className="fas fa-check-circle fa-2x normal"></i>
                                    <div className="number normal">{resolvedAnomalies}</div>
                                    <div>Anomalies résolues</div>
                                </div>
                            </div>
                        </div>
                        <div className="col-md-3">
                            <div className="card stat-card">
                                <div className="card-body">
                                    <i className="fas fa-users fa-2x text-primary"></i>
                                    <div className="number text-primary">5</div>
                                    <div>Employés analysés</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {/* Dernières anomalies */}
                    <div className="row mt-4">
                        <div className="col-md-8">
                            <div className="card">
                                <div className="card-header d-flex justify-content-between align-items-center">
                                    <span>Dernières anomalies détectées</span>
                                    <a href="#" className="btn btn-sm btn-primary">Voir toutes</a>
                                </div>
                                <div className="card-body">
                                    {anomalies.slice(0, 3).map(anomaly => (
                                        <div key={anomaly.id} className={`anomaly-item ${anomaly.severity}`}>
                                            <div className="d-flex justify-content-between">
                                                <h6 className="mb-1">{anomaly.employee}</h6>
                                                <span className={`badge badge-${anomaly.severity}`}>
                                                    {anomaly.severity === 'critical' ? 'Critique' : 'Modérée'}
                                                </span>
                                            </div>
                                            <p className="mb-1">{anomaly.type}</p>
                                            <small className="text-muted">Détectée le {anomaly.date}</small>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        </div>
                        
                        <div className="col-md-4">
                            <div className="card">
                                <div className="card-header">Actions rapides</div>
                                <div className="card-body">
                                    <button className="btn btn-primary w-100 mb-2">
                                        <i className="fas fa-upload me-2"></i>Importer données de paie
                                    </button>
                                    <button className="btn btn-outline-primary w-100 mb-2">
                                        <i className="fas fa-sync me-2"></i>Lancer l'analyse
                                    </button>
                                    <button className="btn btn-outline-primary w-100 mb-2">
                                        <i className="fas fa-file-export me-2"></i>Exporter rapport
                                    </button>
                                    <button className="btn btn-outline-primary w-100">
                                        <i className="fas fa-bell me-2"></i>Configurer alertes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            );
        }
        
        // Composant pour l'onglet Anomalies
        function AnomaliesTab({ anomalies, updateAnomalyStatus }) {
            const [filter, setFilter] = React.useState('all');
            
            const filteredAnomalies = filter === 'all' 
                ? anomalies 
                : anomalies.filter(a => a.severity === filter);
                
            return (
                <div>
                    <div className="d-flex justify-content-between align-items-center mb-4">
                        <h2 className="h4">Gestion des anomalies</h2>
                        <div>
                            <button className="btn btn-primary">
                                <i className="fas fa-plus me-2"></i>Nouvelle analyse
                            </button>
                        </div>
                    </div>
                    
                    {/* Filtres */}
                    <div className="card mb-4">
                        <div className="card-body">
                            <div className="row">
                                <div className="col-md-6">
                                    <label className="form-label">Filtrer par sévérité</label>
                                    <div>
                                        <button 
                                            className={`btn btn-sm ${filter === 'all' ? 'btn-primary' : 'btn-outline-primary'} me-2`}
                                            onClick={() => setFilter('all')}
                                        >
                                            Toutes
                                        </button>
                                        <button 
                                            className={`btn btn-sm ${filter === 'critical' ? 'btn-danger' : 'btn-outline-danger'} me-2`}
                                            onClick={() => setFilter('critical')}
                                        >
                                            Critiques
                                        </button>
                                        <button 
                                            className={`btn btn-sm ${filter === 'warning' ? 'btn-warning' : 'btn-outline-warning'}`}
                                            onClick={() => setFilter('warning')}
                                        >
                                            Modérées
                                        </button>
                                    </div>
                                </div>
                                <div className="col-md-6">
                                    <label className="form-label">Rechercher</label>
                                    <input type="text" className="form-control" placeholder="Nom d'employé ou type d'anomalie..." />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {/* Tableau des anomalies */}
                    <div className="card">
                        <div className="card-header">Liste des anomalies</div>
                        <div className="card-body p-0">
                            <div className="table-responsive">
                                <table className="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Employé</th>
                                            <th>Type d'anomalie</th>
                                            <th>Sévérité</th>
                                            <th>Date de détection</th>
                                            <th>Statut</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {filteredAnomalies.map(anomaly => (
                                            <tr key={anomaly.id}>
                                                <td>{anomaly.employee}</td>
                                                <td>{anomaly.type}</td>
                                                <td>
                                                    <span className={`badge badge-${anomaly.severity}`}>
                                                        {anomaly.severity === 'critical' ? 'Critique' : 'Modérée'}
                                                    </span>
                                                </td>
                                                <td>{anomaly.date}</td>
                                                <td>
                                                    <span className={`badge ${
                                                        anomaly.status === 'non résolu' ? 'bg-danger' : 
                                                        anomaly.status === 'en cours' ? 'bg-warning' : 'bg-success'
                                                    }`}>
                                                        {anomaly.status}
                                                    </span>
                                                </td>
                                                <td>
                                                    <div className="btn-group btn-group-sm">
                                                        <button 
                                                            className="btn btn-outline-primary"
                                                            title="Voir les détails"
                                                        >
                                                            <i className="fas fa-eye"></i>
                                                        </button>
                                                        <button 
                                                            className="btn btn-outline-success"
                                                            title="Marquer comme résolu"
                                                            onClick={() => updateAnomalyStatus(anomaly.id, 'résolu')}
                                                        >
                                                            <i className="fas fa-check"></i>
                                                        </button>
                                                        <button 
                                                            className="btn btn-outline-warning"
                                                            title="Marquer en cours"
                                                            onClick={() => updateAnomalyStatus(anomaly.id, 'en cours')}
                                                        >
                                                            <i className="fas fa-clock"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        ))}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            );
        }
        
        // Composant pour l'onglet Employés
        function EmployeesTab({ employees }) {
            return (
                <div>
                    <h2 className="h4 mb-4">Gestion des employés</h2>
                    
                    <div className="card">
                        <div className="card-header d-flex justify-content-between align-items-center">
                            <span>Liste des employés</span>
                            <button className="btn btn-primary btn-sm">
                                <i className="fas fa-plus me-1"></i>Ajouter un employé
                            </button>
                        </div>
                        <div className="card-body p-0">
                            <div className="table-responsive">
                                <table className="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Département</th>
                                            <th>Salaire mensuel</th>
                                            <th>Dernier paiement</th>
                                            <th>Statut</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {employees.map(employee => (
                                            <tr key={employee.id}>
                                                <td>{employee.name}</td>
                                                <td>{employee.department}</td>
                                                <td>{employee.salary} €</td>
                                                <td>{employee.lastPaid}</td>
                                                <td>
                                                    <span className="badge bg-success">{employee.status}</span>
                                                </td>
                                                <td>
                                                    <div className="btn-group btn-group-sm">
                                                        <button className="btn btn-outline-primary" title="Voir les détails">
                                                            <i className="fas fa-eye"></i>
                                                        </button>
                                                        <button className="btn btn-outline-warning" title="Modifier">
                                                            <i className="fas fa-edit"></i>
                                                        </button>
                                                        <button className="btn btn-outline-danger" title="Analyser la paie">
                                                            <i className="fas fa-chart-line"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        ))}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            );
        }
        
        // Composant pour l'onglet Rapports
        function ReportsTab({ anomalies, employees }) {
            return (
                <div>
                    <h2 className="h4 mb-4">Rapports et statistiques</h2>
                    
                    <div className="row">
                        <div className="col-md-8">
                            <div className="card">
                                <div className="card-header">Statistiques des anomalies</div>
                                <div className="card-body">
                                    <div className="chart-container">
                                        <p className="text-center">Graphique des anomalies par type et sévérité</p>
                                        <div className="d-flex justify-content-center align-items-center h-100">
                                            <div className="text-center">
                                                <i className="fas fa-chart-pie fa-3x text-muted"></i>
                                                <p className="mt-2">Visualisation des données</p>
                                                <small className="text-muted">(Intégration avec une bibliothèque de graphiques)</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div className="col-md-4">
                            <div className="card">
                                <div className="card-header">Générer un rapport</div>
                                <div className="card-body">
                                    <form>
                                        <div className="mb-3">
                                            <label className="form-label">Type de rapport</label>
                                            <select className="form-select">
                                                <option>Rapport d'anomalies</option>
                                                <option>Rapport de conformité</option>
                                                <option>Rapport mensuel</option>
                                                <option>Rapport personnalisé</option>
                                            </select>
                                        </div>
                                        <div className="mb-3">
                                            <label className="form-label">Période</label>
                                            <div className="row">
                                                <div className="col">
                                                    <input type="date" className="form-control" placeholder="Début" />
                                                </div>
                                                <div className="col">
                                                    <input type="date" className="form-control" placeholder="Fin" />
                                                </div>
                                            </div>
                                        </div>
                                        <div className="mb-3">
                                            <label className="form-label">Format</label>
                                            <div>
                                                <div className="form-check form-check-inline">
                                                    <input className="form-check-input" type="radio" name="format" id="pdf" defaultChecked />
                                                    <label className="form-check-label" htmlFor="pdf">PDF</label>
                                                </div>
                                                <div className="form-check form-check-inline">
                                                    <input className="form-check-input" type="radio" name="format" id="excel" />
                                                    <label className="form-check-label" htmlFor="excel">Excel</label>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" className="btn btn-primary w-100">
                                            <i className="fas fa-download me-2"></i>Générer le rapport
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div className="row mt-4">
                        <div className="col-md-6">
                            <div className="card">
                                <div className="card-header">Rapports récents</div>
                                <div className="card-body">
                                    <ul className="list-group list-group-flush">
                                        <li className="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 className="mb-1">Rapport d'anomalies - Mai 2023</h6>
                                                <small className="text-muted">Généré le 01/06/2023</small>
                                            </div>
                                            <button className="btn btn-sm btn-outline-primary">
                                                <i className="fas fa-download"></i>
                                            </button>
                                        </li>
                                        <li className="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 className="mb-1">Rapport de conformité - Trimestre 1</h6>
                                                <small className="text-muted">Généré le 01/04/2023</small>
                                            </div>
                                            <button className="btn btn-sm btn-outline-primary">
                                                <i className="fas fa-download"></i>
                                            </button>
                                        </li>
                                        <li className="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 className="mb-1">Audit complet - 2022</h6>
                                                <small className="text-muted">Généré le 15/01/2023</small>
